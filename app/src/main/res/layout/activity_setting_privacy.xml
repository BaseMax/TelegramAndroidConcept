<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_weight="0.9"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="حریم خصوصی و امنیت"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_marginRight="15dp"
                        />


                    <ImageView
                        android:id="@+id/button_cancel"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_cancel"
                        />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingRight="25dp"
                    android:text="آخرین زمان در دسترس بودن شما"
                    android:textColor="#707579"
                    android:textSize="23dp"
                    android:layout_marginTop="8dp"
                    />

                <LinearLayout
                    android:id="@+id/box_lastseen_all"
                    android:background="@drawable/selectable_background"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0.92">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="برای همه در دسترس باشد."
                            android:textColor="#000000"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:paddingLeft="10dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="پیشفرض اولیه برنامه"
                            android:textColor="#707579"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:textAlignment="gravity"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="right"
                        android:gravity="right">

                        <ImageView
                            android:id="@+id/radiobox_lastseen_all"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/radiobutton_active"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- row -->

            <LinearLayout
                android:id="@+id/box_lastseen_contact"
                android:background="@drawable/selectable_background"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.92">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="برای مخاطبین شمادر دسترس باشد."
                        android:textColor="#000000"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="اگر میخواهید فقط مخاطبینتان از آخرین زمان در دسترس شما اطلاع داشته باشد."
                        android:textColor="#707579"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textAlignment="gravity"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/radiobox_lastseen_contact"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/radiobutton_normal"
                        />

                </LinearLayout>

            </LinearLayout>

            <!-- row -->

            <LinearLayout
                android:id="@+id/box_lastseen_none"
                android:background="@drawable/selectable_background"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.92">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="برای هیچ کسی در دسترس نباشد."
                        android:textColor="#000000"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="پیشنهاد نمی شود."
                        android:textColor="#707579"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textAlignment="gravity"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/radiobox_lastseen_none"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/radiobutton_normal"
                        />

                </LinearLayout>

            </LinearLayout>










            <!-- next section -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingRight="25dp"
                    android:text="تصویر پروفایل شما"
                    android:textColor="#707579"
                    android:textSize="23dp"
                    android:layout_marginTop="8dp"
                    />

                <LinearLayout
                    android:id="@+id/box_profilepic_all"
                    android:background="@drawable/selectable_background"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0.92">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="برای همه در دسترس باشد."
                            android:textColor="#000000"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:paddingLeft="10dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="پیشفرض اولیه برنامه"
                            android:textColor="#707579"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:textAlignment="gravity"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="right"
                        android:gravity="right">

                        <ImageView
                            android:id="@+id/radiobox_profilepic_all"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/radiobutton_active"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- row -->

            <LinearLayout
                android:id="@+id/box_profilepic_contact"
                android:background="@drawable/selectable_background"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.92">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="برای مخاطبین شمادر دسترس باشد."
                        android:textColor="#000000"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="اگر میخواهید فقط تصویر پروفایل شما فقط برای مخاطبینتان در دسترس باشد."
                        android:textColor="#707579"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textAlignment="gravity"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/radiobox_profilepic_contact"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/radiobutton_normal"
                        />

                </LinearLayout>

            </LinearLayout>

            <!-- row -->

            <LinearLayout
                android:id="@+id/box_profilepic_none"
                android:background="@drawable/selectable_background"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.92">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="برای هیچ کسی در دسترس نباشد."
                        android:textColor="#000000"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="پیشنهاد نمی شود."
                        android:textColor="#707579"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textAlignment="gravity"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/radiobox_profilepic_none"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/radiobutton_normal"
                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
