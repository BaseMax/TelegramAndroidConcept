<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_weight="0.9"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اعلان ها"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_marginRight="15dp"
                        />


                    <ImageView
                        android:id="@+id/button_cancel"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_cancel"
                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="25dp"
            android:text="پیام رسان"
            android:textColor="#707579"
            android:textSize="23dp"
            android:layout_marginTop="8dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- row -->

            <LinearLayout
                android:id="@+id/box_private"
                android:background="@drawable/selectable_background"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.92">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="نمایش اعلان برای پیام های چت خصوصی"
                        android:textColor="#000000"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="فعال"
                        android:textColor="#707579"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textAlignment="gravity"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/checkbox_private"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/checkbox_normal"
                        />

                </LinearLayout>

            </LinearLayout>

            <!-- row -->

            <LinearLayout
                android:id="@+id/box_group"
                android:background="@drawable/selectable_background"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.92">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="نمایش اعلان برای پیام های گروه"
                        android:textColor="#000000"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="غیر فعال"
                        android:textColor="#707579"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textAlignment="gravity"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/checkbox_group"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/checkbox_active"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="25dp"
            android:text="صفحه ها"
            android:textColor="#707579"
            android:textSize="23dp"
            android:layout_marginTop="8dp"
            />


        <!-- row -->

        <LinearLayout
            android:id="@+id/box_blog"
            android:background="@drawable/selectable_background"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.92">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="نمایش اعلان هنگام مطلب جدید در صفحات دنبال شده"
                    android:textColor="#000000"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="فعال"
                    android:textColor="#707579"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:gravity="right">

                <ImageView
                    android:id="@+id/checkbox_blog"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/checkbox_normal"
                    />

            </LinearLayout>

        </LinearLayout>


        <!-- row -->

        <LinearLayout
            android:id="@+id/box_gallery"
            android:background="@drawable/selectable_background"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.92">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="نمایش اعلان هنگام عکس جدید در صفحات دنبال شده"
                    android:textColor="#000000"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="فعال"
                    android:textColor="#707579"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:gravity="right">

                <ImageView
                    android:id="@+id/checkbox_gallery"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/checkbox_normal"
                    />

            </LinearLayout>

        </LinearLayout>





        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="25dp"
            android:text="دیگر"
            android:textColor="#707579"
            android:textSize="23dp"
            android:layout_marginTop="8dp"
            />


        <!-- row -->

        <LinearLayout
            android:id="@+id/box_contact"
            android:background="@drawable/selectable_background"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="0.92">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="نمایش اعلان هنگام ورود مخاطبین شما به برنامه"
                    android:textColor="#000000"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="فعال"
                    android:textColor="#707579"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:gravity="right">

                <ImageView
                    android:id="@+id/checkbox_contact"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/checkbox_normal"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>
