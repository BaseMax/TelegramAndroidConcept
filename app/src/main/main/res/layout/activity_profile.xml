<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_weight="0.1"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/button_navigation"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_navigation"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_weight="0.9"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اطلاعات حساب کاربری"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_marginRight="15dp"
                        />


                    <ImageView
                        android:id="@+id/button_cancel"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_cancel"
                        />


                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/avatar"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="مسعود قرائتی"
                android:textColor="#000000"
                android:textSize="25dp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="آنلاین"
                android:textColor="#3390ec"
                android:textSize="17dp"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/box_bio"
                    android:background="@drawable/selectable_background"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0.92">

                        <TextView
                            android:id="@+id/text_bio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="نویسنده و خبرنگار فعال شهرستان کاشان، هفته نامه آرمان"
                            android:textColor="#000000"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:paddingLeft="10dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="بیوگرافی"
                            android:textColor="#707579"
                            android:layout_gravity="right"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="right"
                        android:gravity="right">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/icon_bio"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- row -->


            <LinearLayout
                android:id="@+id/box_username"
                android:background="@drawable/selectable_background"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.92">

                    <TextView
                        android:id="@+id/text_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="masoud.gharaati"
                        android:textColor="#000000"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="شناسه کاربری"
                        android:textColor="#707579"
                        android:layout_gravity="right"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_username"
                        />

                </LinearLayout>

            </LinearLayout>
            android:layout_weight="0.08"



            <!-- row -->


            <LinearLayout
                android:id="@+id/box_phone"
                android:background="@drawable/selectable_background"
                android:clickable="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.92">

                    <TextView
                        android:id="@+id/text_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+98 913 495 0787"
                        android:textColor="#000000"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:paddingLeft="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="تلفن همراه"
                        android:textColor="#707579"
                        android:layout_gravity="right"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_call"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>